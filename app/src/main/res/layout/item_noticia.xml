<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_noticia_imageView_thumbnail"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:contentDescription="imagem"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/item_noticia_textView_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="11dp"
                android:text="www.globo.com.br"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/item_noticia_imageView_thumbnail"
                app:layout_constraintEnd_toEndOf="@+id/item_noticia_imageView_thumbnail"
                app:layout_constraintHorizontal_bias="0.01"
                app:layout_constraintStart_toStartOf="@+id/item_noticia_imageView_thumbnail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.98" />


            <TextView
                android:id="@+id/item_noticia_textView_titulo"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:textSize="18sp"
                android:padding="15dp"
                android:text="Polica ataca novamente"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/item_noticia_imageView_thumbnail"
                app:layout_constraintTop_toBottomOf="@+id/item_noticia_imageView_thumbnail" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:background="@drawable/shape_rounded"
                app:layout_constraintBottom_toBottomOf="@+id/item_noticia_textView_source"
                app:layout_constraintEnd_toEndOf="@+id/item_noticia_imageView_thumbnail"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/item_noticia_textView_source"
                app:layout_constraintTop_toTopOf="@+id/item_noticia_textView_source">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_access_time_orange_24dp"
                    tools:text="10/20/2020" />

                <TextView
                    android:id="@+id/item_noticia_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@android:color/black"
                    tools:text=" 20/10/2020" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>